{
  "name": "dev-prompts",
  "displayName": "Dev Prompts",
  "publisher": "finnclancy",
  "version": "0.1.0",
  "description": "import shared developer prompts from finnjclancy/dev-prompts into your workspace",
  "license": "MIT",
  "type": "commonjs",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "images/image.png",
  "galleryBanner": { "color": "#0ea5e9", "theme": "dark" },
  "keywords": ["prompts", "llm", "ai", "templates", "developer prompts"],
  "activationEvents": [
    "onCommand:dev-prompts.importPrompts",
    "onCommand:dev-prompts.syncPrompts",
    "onCommand:dev-prompts.searchAndImport",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dev-prompts.importPrompts",
        "title": "Dev Prompts: Import Prompts"
      },
      {
        "command": "dev-prompts.syncPrompts",
        "title": "Dev Prompts: Sync Prompts"
      },
      {
        "command": "dev-prompts.searchAndImport",
        "title": "Dev Prompts: Search and Import"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Dev Prompts",
      "properties": {
        "devPrompts.autoImportOnActivate": {
          "type": "boolean",
          "default": false,
          "description": "if enabled, automatically import prompts on vscode startup"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "prepublishOnly": "npm run compile",
    "package": "vsce package || @vscode/vsce package",
    "publish:marketplace": "vsce publish || @vscode/vsce publish",
    "publish:patch": "vsce publish patch || @vscode/vsce publish patch",
    "publish:minor": "vsce publish minor || @vscode/vsce publish minor",
    "publish:major": "vsce publish major || @vscode/vsce publish major",
    "package:ovsx": "ovsx package",
    "publish:openvsx": "ovsx publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/finnjclancy/dev-prompts-extension.git"
  },
  "bugs": {
    "url": "https://github.com/finnjclancy/dev-prompts-extension/issues"
  },
  "homepage": "https://github.com/finnjclancy/dev-prompts-extension#readme",
  "dependencies": {
    "unzipper": "^0.12.3"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/vscode": "^1.104.0",
    "typescript": "^5.9.2",
    "ovsx": "^0.9.2",
    "@vscode/vsce": "^3.1.0",
    "vsce": "^2.15.0"
  }
}
